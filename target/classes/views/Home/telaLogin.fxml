<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.LoginController"
            prefWidth="500" prefHeight="350">

    <children>

        <VBox alignment="CENTER" spacing="15"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="60"
              AnchorPane.rightAnchor="60"
              AnchorPane.bottomAnchor="20"
              style="-fx-background-color: #FFFFFF; -fx-padding: 20;
                     -fx-background-radius: 10;">

            <Label text="Login"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <VBox spacing="10" maxWidth="250">

                <Label text="UsuÃ¡rio:"/>
                <TextField fx:id="tfLogin" promptText="Digite seu login"/>

                <Label text="Senha:"/>
                <PasswordField fx:id="pfSenha" promptText="Digite sua senha"/>

            </VBox>

            <VBox alignment="CENTER" spacing="10">

                <Button fx:id="btnEntrar" text="Entrar"
                        style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white;"
                        maxWidth="200"/>

                <Button fx:id="btnCriarConta" text="Criar conta"
                        style="-fx-font-size: 14px; -fx-background-color: transparent; -fx-text-fill: #2196F3;"
                        maxWidth="200"/>

            </VBox>

        </VBox>

    </children>
</AnchorPane>