<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UsuariosController">

    <children>

        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <children>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gerenciamento de Funcionário" />
                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <TableView fx:id="tableUsers" prefHeight="450">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                        <TableColumn fx:id="colNome" prefWidth="248.0" text="Nome" />
                        <TableColumn fx:id="colTelefone" prefWidth="100.0" text="Telefone" />
                        <TableColumn fx:id="colLogin" prefWidth="145.0" text="Login" />
                        <TableColumn fx:id="colNivel" prefWidth="100.0" text="Nível" />
                        <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <children>
                        <Button fx:id="btnNewUser" text="Novo Usuário">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btnSearchUser" text="Pesquisar">
                            <HBox.margin>
                                <Insets right="597.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btnEditUser" text="Editar" />
                        <Button fx:id="btnDeleteUser" text="Excluir" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- MODAL -->
        <AnchorPane fx:id="paneEditUser" style="-fx-background-color: rgba(0,0,0,0.35);" visible="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <children>
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 15;                              -fx-background-radius: 6; -fx-border-radius: 6;" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150" AnchorPane.topAnchor="40">
                    <children>

                        <Label fx:id="lblFormTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Novo Usuário" />

                        <GridPane hgap="10" vgap="8">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30" />
                                <ColumnConstraints percentWidth="70" />
                            </columnConstraints>

                            <children>
                                <Label text="Nome:" GridPane.rowIndex="0" />
                                <TextField fx:id="tfNome" GridPane.columnIndex="1" />

                                <Label text="Login:" GridPane.rowIndex="1" />
                                <TextField fx:id="tfLogin" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Senha:" GridPane.rowIndex="2" />
                                <PasswordField fx:id="tfSenha" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Nível:" GridPane.rowIndex="3" />
                                <ComboBox fx:id="cbNivel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Status:" GridPane.rowIndex="4" />
                                <ComboBox fx:id="cbStatus" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            </children>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>

                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <children>
                                <Button fx:id="btnSaveUser" text="Salvar" />
                                <Button fx:id="btnCancelUser" text="Cancelar" />
                            </children>
                        </HBox>
                    </children>

                </VBox>
            </children>
        </AnchorPane>

    </children>
</AnchorPane>
