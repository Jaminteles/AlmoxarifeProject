<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: rgba(0,0,0,0.45);"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="controllers.PopupCadastrarController">

    <children>
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: white; -fx-padding: 15;                      -fx-background-radius: 6; -fx-border-radius: 6;"
              AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="80" AnchorPane.rightAnchor="80"
              AnchorPane.topAnchor="40">
            <children>

                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Cadastrar Usuário"/>

                <GridPane hgap="10" prefHeight="132.0" prefWidth="410.0" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <!-- CAMPOS GENÉRICOS -->
                    <children>
                        <Label text="Nome:" GridPane.rowIndex="0"/>
                        <TextField fx:id="tfCampo1" GridPane.columnIndex="1"/>

                        <Label text="Login:" GridPane.rowIndex="1"/>
                        <TextField fx:id="tfCampo2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Nivel de Acesso" GridPane.rowIndex="2"/>
                        <TextField fx:id="tfCampo3" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label text="Status:" GridPane.rowIndex="3"/>
                        <TextField fx:id="tfCampo31" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                    </rowConstraints>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <children>
                        <Button fx:id="btnSalvar" text="Salvar"/>
                        <Button fx:id="btnCancelar" text="Cancelar"/>
                    </children>
                </HBox>
            </children>

        </VBox>
    </children>
</AnchorPane>
