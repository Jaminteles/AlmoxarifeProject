<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="950" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="controllers.MovimentacoesController">

    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
           <children>
   
               <HBox alignment="CENTER_LEFT" spacing="10">
      <children>
                      <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Entradas &amp; Saídas" />
      
                      <Region HBox.hgrow="ALWAYS" />
      
                      <ComboBox fx:id="cbTipoFiltro" promptText="Tipo" />
                      <DatePicker fx:id="dpFromFiltro" />
                      <DatePicker fx:id="dpToFiltro" />
                      <Button fx:id="btnAplicarFiltro" text="Aplicar" />
      </children>
               </HBox>
   
               <TableView fx:id="tableMov" prefHeight="450">
                   <columns>
                       <TableColumn fx:id="colItem" prefWidth="200" text="Item" />
                       <TableColumn fx:id="colTipo" prefWidth="90" text="Tipo" />
                       <TableColumn fx:id="colQtd" prefWidth="100" text="Quantidade" />
                       <TableColumn fx:id="colObra" prefWidth="180" text="Obra" />
                       <TableColumn fx:id="colUser" prefWidth="120" text="Usuário" />
                       <TableColumn fx:id="colData" prefWidth="120" text="Data" />
                   </columns>
               </TableView>
   
               <HBox alignment="CENTER_RIGHT" spacing="10">
      <children>
                      <Button fx:id="btnNovaMov" text="Nova Movimentação">
                     <HBox.margin>
                        <Insets right="687.0" />
                     </HBox.margin>
                  </Button>
                      <Button fx:id="btnEditarMov" text="Editar" />
                      <Button fx:id="btnExcluirMov" text="Excluir" />
      </children>
               </HBox>
           </children>
        </VBox>

        <!-- MODAL -->
        <AnchorPane fx:id="paneEditMov" style="-fx-background-color: rgba(0,0,0,0.35);" visible="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <children>
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 15;                              -fx-background-radius: 6; -fx-border-radius: 6;" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150" AnchorPane.topAnchor="40">
                   <children>
   
                       <Label fx:id="lblFormTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registrar Movimentação" />
   
                       <GridPane hgap="10" vgap="8">
                           <columnConstraints>
                               <ColumnConstraints percentWidth="30" />
                               <ColumnConstraints percentWidth="70" />
                           </columnConstraints>
   
                           <children>
                               <Label text="Item:" GridPane.rowIndex="0" />
                               <ComboBox fx:id="cbItem" GridPane.columnIndex="1" />
   
                               <Label text="Tipo:" GridPane.rowIndex="1" />
                               <ComboBox fx:id="cbTipo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
                               <Label text="Quantidade:" GridPane.rowIndex="2" />
                               <TextField fx:id="tfQuantidade" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
                               <Label text="Obra:" GridPane.rowIndex="3" />
                               <ComboBox fx:id="cbObra" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
                               <Label text="Usuário:" GridPane.rowIndex="4" />
                               <ComboBox fx:id="cbUsuario" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
                               <Label text="Data:" GridPane.rowIndex="5" />
                               <DatePicker fx:id="dpData" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                           </children>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                       </GridPane>
   
                       <HBox alignment="CENTER_RIGHT" spacing="10">
      <children>
                              <Button fx:id="btnSaveMov" text="Salvar" />
                              <Button fx:id="btnCancelMov" text="Cancelar" />
      </children>
                       </HBox>
                   </children>

                </VBox>
            </children>
        </AnchorPane>

    </children>
</AnchorPane>
