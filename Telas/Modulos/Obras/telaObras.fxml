<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="900" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="controllers.ObrasController">

    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
           <children>
   
               <HBox alignment="CENTER_LEFT" spacing="10">
      <children>
                      <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Obras" />
                      <Region HBox.hgrow="ALWAYS" />
                      <TextField fx:id="searchObra" prefHeight="25.0" prefWidth="237.0" promptText="Buscar por nome, responsável ou cidade" />
                      <Button fx:id="btnSearchObra" text="Buscar" />
      </children>
               </HBox>
   
               <TableView fx:id="tableObras" prefHeight="450">
                   <columns>
                       <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                       <TableColumn fx:id="colNome" prefWidth="220" text="Nome" />
                       <TableColumn fx:id="colResponsavel" prefWidth="160" text="Responsável" />
                       <TableColumn fx:id="colCidade" prefWidth="140" text="Cidade" />
                       <TableColumn fx:id="colStatus" prefWidth="90" text="Status" />
                   </columns>
               </TableView>
   
               <HBox alignment="CENTER_RIGHT" spacing="10">
      <children>
                      <Button fx:id="btnNewObra" text="Adicionar Obra">
                     <HBox.margin>
                        <Insets right="667.0" />
                     </HBox.margin>
                  </Button>
                      <Button fx:id="btnEditObra" text="Editar" />
                      <Button fx:id="btnDeleteObra" text="Excluir" />
      </children>
               </HBox>
           </children>
        </VBox>

        <!-- MODAL -->
        <AnchorPane fx:id="paneEditObra" style="-fx-background-color: rgba(0,0,0,0.35);" visible="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <children>
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 15;                              -fx-background-radius: 6; -fx-border-radius: 6;" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="150" AnchorPane.rightAnchor="150" AnchorPane.topAnchor="40">
                   <children>
   
                       <Label fx:id="lblFormTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Cadastrar Obra" />
   
                       <GridPane hgap="10" vgap="8">
                           <columnConstraints>
                               <ColumnConstraints percentWidth="30" />
                               <ColumnConstraints percentWidth="70" />
                           </columnConstraints>
   
                           <children>
                               <Label text="Nome:" GridPane.rowIndex="0" />
                               <TextField fx:id="tfNome" GridPane.columnIndex="1" />
   
                               <Label text="Responsável:" GridPane.rowIndex="1" />
                               <TextField fx:id="tfResponsavel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
                               <Label text="Telefone:" GridPane.rowIndex="2" />
                               <TextField fx:id="tfTelefone" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
                               <Label text="Rua:" GridPane.rowIndex="3" />
                               <TextField fx:id="tfRua" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
                               <Label text="Número:" GridPane.rowIndex="4" />
                               <TextField fx:id="tfNumero" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
                               <Label text="Bairro:" GridPane.rowIndex="5" />
                               <TextField fx:id="tfBairro" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   
                               <Label text="Cidade:" GridPane.rowIndex="6" />
                               <TextField fx:id="tfCidade" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   
                               <Label text="UF:" GridPane.rowIndex="7" />
                               <TextField fx:id="tfUf" GridPane.columnIndex="1" GridPane.rowIndex="7" />
   
                               <Label text="Status:" GridPane.rowIndex="8" />
                               <ComboBox fx:id="cbStatus" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                           </children>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                       </GridPane>
   
                       <HBox alignment="CENTER_RIGHT" spacing="10">
      <children>
                              <Button fx:id="btnSaveObra" text="Salvar" />
                              <Button fx:id="btnCancelObra" text="Cancelar" />
      </children>
                       </HBox>
                   </children>

                </VBox>
            </children>
        </AnchorPane>

    </children>
</AnchorPane>
